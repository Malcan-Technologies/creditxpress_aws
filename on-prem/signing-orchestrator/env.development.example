# Signing Orchestrator Development Environment Variables

# Database Configuration
DATABASE_URL=postgresql://agreements_user:agreements_password@agreements-postgres:5432/agreements_db

# Application Settings
APP_PORT=4010
APP_BASE_URL=http://192.168.0.100:4010
NODE_ENV=development

# DocuSeal Integration (Development)
DOCUSEAL_BASE_URL=http://192.168.0.100:3001
DOCUSEAL_WEBHOOK_HMAC_SECRET=dev-secret-key
DOCUSEAL_API_TOKEN=your_docuseal_api_token_here

# PKI Integration Settings
PKI_ENABLED=true
PKI_SESSION_EXPIRY_MINUTES=10
PKI_OTP_MAX_ATTEMPTS=3

# File Storage
SIGNED_FILES_DIR=/data/signed
ORIGINAL_FILES_DIR=/data/original
STAMPED_FILES_DIR=/data/stamped
MAX_UPLOAD_MB=50

# MyTrustSigner Agent Configuration
MTSA_ENV=pilot
MTSA_WSDL_PILOT=http://mtsa-pilot:8080/MTSAPilot/MyTrustSignerAgentWSAPv2?wsdl
MTSA_WSDL_PROD=http://mtsa-prod:8080/MTSA/MyTrustSignerAgentWSAPv2?wsdl
MTSA_SOAP_USERNAME=your_mtsa_username
MTSA_SOAP_PASSWORD=your_mtsa_password

# API Authentication
SIGNING_ORCHESTRATOR_API_KEY=dev-api-key-12345

# Security (Relaxed for development)
CORS_ORIGINS=http://localhost:3000,http://192.168.0.100:3001,http://localhost:4010
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging (Verbose for development)
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Timezone
KUALA_LUMPUR_TZ=Asia/Kuala_Lumpur
TZ=Asia/Kuala_Lumpur
