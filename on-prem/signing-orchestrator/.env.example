# Signing Orchestrator Environment Variables
# Copy this file to .env and fill in the values

# ======================
# Server
# ======================
PORT=4010
NODE_ENV=production

# ======================
# Database (local to on-prem)
# ======================
DATABASE_URL=postgresql://postgres:password@localhost:5433/agreements_db

# ======================
# API Authentication
# ======================
API_KEY=your-signing-api-key-must-match-backend

# ======================
# DocuSeal
# ======================
DOCUSEAL_URL=http://docuseal:3000
DOCUSEAL_API_TOKEN=your-docuseal-token

# ======================
# MTSA Configuration
# ======================
MTSA_WSDL_URL=https://mtsa.example.com/service?wsdl
MTSA_USERNAME=
MTSA_PASSWORD=
MTSA_ENV=pilot

# ======================
# File Storage Paths
# ======================
ORIGINAL_FILES_DIR=/app/files/original
SIGNED_FILES_DIR=/app/files/signed
STAMPED_FILES_DIR=/app/files/stamped
