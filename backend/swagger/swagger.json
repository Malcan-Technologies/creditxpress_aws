    "/api/loan-applications/{id}/status": {
      "patch": {
        "summary": "Update application status",
        "tags": [
          "Loan Applications"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Loan application ID or URL link"
          }
        ],
        "requestBody": {
          "required": true,
