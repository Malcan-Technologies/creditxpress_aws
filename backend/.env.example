# Backend Environment Variables
# Copy this file to .env and fill in the values

# ======================
# Database
# ======================
DATABASE_URL=postgresql://postgres:password@localhost:5432/creditxpress

# ======================
# Authentication
# ======================
JWT_SECRET=your-jwt-secret-here-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-here-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ======================
# Server
# ======================
PORT=4001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ======================
# AWS (for S3 uploads in production)
# ======================
AWS_REGION=ap-southeast-5
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=creditxpress-prod-files

# ======================
# Signing Orchestrator (On-Prem)
# ======================
SIGNING_ORCHESTRATOR_URL=http://localhost:4010
SIGNING_ORCHESTRATOR_API_KEY=your-signing-api-key

# ======================
# DocuSeal
# ======================
DOCUSEAL_URL=http://localhost:3003
DOCUSEAL_API_TOKEN=your-docuseal-token

# ======================
# WhatsApp API
# ======================
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_API_TOKEN=
ENABLE_WHATSAPP_NOTIFICATIONS=false

# ======================
# Email (Resend)
# ======================
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM=noreply@creditxpress.com.my

# ======================
# CTOS
# ======================
CTOS_API_URL=https://api.ctos.com.my
CTOS_USERNAME=
CTOS_PASSWORD=
CTOS_API_KEY=

# ======================
# Timezone
# ======================
TZ=Asia/Kuala_Lumpur
