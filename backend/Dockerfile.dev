FROM node:20-bullseye-slim

WORKDIR /app

# Install dependencies (removed cron as we use node-cron)
# Added fontconfig and fonts-dejavu for ReactPDF font support
RUN apt-get update && apt-get install -y \
    openssl \
    python3 \
    make \
    g++ \
    curl \
    fontconfig \
    fonts-dejavu \
    && rm -rf /var/lib/apt/lists/*

# Create uploads and receipts directories
RUN mkdir -p uploads receipts

# Copy package files
COPY package.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose the port the app runs on
EXPOSE 4001

# Make scripts executable
RUN chmod +x scripts/*.sh scripts/*.js

# Generate Prisma client after volume mount, push schema and start the server (cron is now built-in)
# Note: Using ts-node-dev directly instead of build to avoid TypeScript compilation blocking startup
CMD /bin/bash -c "sleep 5 && npm install && npx prisma generate && npx prisma db push --accept-data-loss && npm run dev"
